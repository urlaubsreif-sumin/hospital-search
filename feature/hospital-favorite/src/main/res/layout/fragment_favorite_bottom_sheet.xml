<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.sumin.hospital_favorite.FavoriteBottomSheetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icn_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_hospital_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/btn_close"
            app:layout_constraintBottom_toBottomOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_close"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite_folder_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/btn_ok_height"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/btn_close"
            app:layout_constraintBottom_toBottomOf="@id/btn_ok"
            tools:listitem="@layout/holder_favorite_folder"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_ok_height"
            android:text="@{viewmodel.folderListUiState.buttonText}"
            android:gravity="center"
            android:padding="10dp"
            android:enabled="@{viewmodel.folderListUiState.buttonEnabled}"
            android:layout_marginTop="300dp"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_ok"
            app:layout_constraintTop_toBottomOf="@id/btn_close"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#03A9F4"
            android:visibility="@{viewmodel.folderListUiState.fetching ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="@id/rv_favorite_folder_list"
            app:layout_constraintBottom_toBottomOf="@id/rv_favorite_folder_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
