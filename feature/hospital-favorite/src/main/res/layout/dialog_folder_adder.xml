<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_white_round_20">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="새 폴더 추가"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icn_close"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/et_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="새 폴더 명을 입력해주세요"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_total_length"
            app:layout_constraintTop_toTopOf="@id/et_folder_name"
            app:layout_constraintBottom_toBottomOf="@id/et_folder_name"
            tools:text="0"/>

        <TextView
            android:id="@+id/tv_total_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="/20"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/et_folder_name"
            app:layout_constraintTop_toTopOf="@id/et_folder_name"
            app:layout_constraintBottom_toBottomOf="@id/et_folder_name"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_ok_height"
            android:text="완료"
            android:gravity="center"
            android:padding="10dp"
            android:enabled="true"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_ok"
            android:layout_margin="16dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_folder_name"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
